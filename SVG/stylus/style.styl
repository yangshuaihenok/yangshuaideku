$bg_color = #ffd200

*
    margin 0
    padding 0
html,body
    width 100%
    height 100%

.plane-page
    width 100%
    height 100%
    background-color $bg_color
    position relative
    .plane-wrapper
        position absolute
        left 20%
        top 40%
        animation feiji 10s linear infinite
        @keyframes feiji
            0%
                transform translate3d(0px,0px,0px)    
            
            50%
                transform translate3d(0px,-100px,-100px)    
            
            100%
                transform translate3d(0px,0px,0px)    
            
        .plane
            width 100%
        .rotate-container
            position absolute
            top 51.7003%
            left 13.1%
            display inline-block
            width 27.424%
            height 14.447%
            transform-origin center center
            animation rotating .2s linear infinite reverse
            @keyframes rotating 
                0%{
                    transform rotateZ(0deg)
                }
                50%{
                    transform rotateZ(360deg)
                }
                100%{
                    transform rotateZ(0deg)
                }
        
            .propeller
                width 100%
                transform rotateY(-28deg)
