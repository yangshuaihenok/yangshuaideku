/* pages/play/play.wxss */
page,.body,.bg{
  height: 100%
}
.sing-brief{
  position:absolute;
  left:10px;
  top:10px;
  color:#e03b46;
}
.song-name{
  font-size:20px;
  font-weight:600;
}
.singer-name{
  font-size:12px;
}
.sing-show{
  position: relative;
  width: 100%;
  height: 85%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.stick{
  position: absolute;
  top: 26%;
  left: 40%;
  width: 100rpx;
  height: 130rpx;
  transform: translate(-20%,-50%) rotate(-20deg);
  transform-origin: top;
  z-index: 1;
}
.disk{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  z-index: -1;
}
.coverImage {
  width: 410rpx;
  height: 410rpx;
  border-radius: 50%;
}

.coverImage.play{
    animation: rotate 15s linear infinite;
}

@keyframes rotate {
    0%{
        transform: rotate(0);
    }
    100%{
        transform: rotate(360deg);
    }
}