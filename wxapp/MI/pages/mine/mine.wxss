/* pages/mine/mine.wxss */
page{
  background-color: #ededed;
}
.header{
  background-color:#fff;
  position: relative;
  height: 200rpx;
  line-height: 50%;
  padding:30rpx 30rpx 30rpx 200rpx;
  box-sizing: border-box;
  font-size: 35rpx;
  color: rgb(0, 0, 0);
  border-top: 20rpx solid #ededed;
}
.header .thumb{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.header .header-id{
  position: absolute;
  top: 110rpx;
  color: #bdbbbb;
  font-size: 30rpx;
}
.header .about{
  float: right;
  padding:55rpx 5rpx;
}

.header .VR-photo {
  position: relative;
  width: 300rpx;
  height: 300rpx; 
  top:20rpx;
  left:23%;
}

/* 列表 */

.mine-goods{
  background-color:#fff;
  position: relative;
  border-bottom: 20rpx solid #ededed;
  border-top: 20rpx solid #ededed;
  line-height: 90rpx;
  font-size: 35rpx;
}
.mine-goods .goods-photo .goods{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  left: 20rpx;
  top: 20rpx;
}
.mine-goods .goods-text{
  position: relative;
  left: 80rpx;
  height: 90rpx;
  text-align: left;
}
.mine-goods .goods-photo::after{
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
