}
.product .recommend .rec-1 .rec-1-text .text-name{
  font-size:36rpx 
}
.product .recommend .rec-1 .rec-1-text .text-int{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
