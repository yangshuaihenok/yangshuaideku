/**index.wxss**/

.head{
  background-color: #ff6700;
  position: relative;
  overflow: hidden;
}
.head .head-search{
  float: left;
  height:60rpx;
  width: 713rpx;
  margin: 20rpx 20rpx 14rpx 20rpx;
  background-color: #fff;
  border-radius:25rpx;
}
.head-search-btn{
  border-radius:25rpx;
}
.head-search-text{
  position: relative;
  left: 265.5rpx;
}
.head .head-search .head-search-photo{
  position: relative;
  top: 5rpx;
  width: 50rpx;
  height: 50rpx;
}
.head .head-search .head-search-word{
  color:#aaa;
  position: absolute;
  line-height: 59.2rpx;
  font-size: 30rpx;
}
.swiper .slide-image{
  width:750.4rpx;height:300rpx
}

/* 类型 */
.type{
  width: 100%;
  padding-top: 30rpx;
  
}
.items{
  display: inline-block;
  width: 20%;
  padding-bottom:15px;

}
.items image{
  width: 60rpx;
  height: 60rpx;
  left:45rpx;
  position:relative;
}
.items text{
  color: #515151;
  font-size: 25rpx;
  line-height: 30rpx;
  display: block;
  text-align: center;
}


/* 产品 */
.product{
  background-color: #ededed;
  padding: 20rpx;
}

.product .recommend{
  background: #fff;
  /* box-sizing: border-box; */
  border-radius: 15rpx;
}
.product .recommend .rec-text{
  padding: 20rpx 40rpx;
  color: rgb(133, 133, 133);
  border-bottom: 1rpx solid rgb(228, 228, 228); 
}

.product .recommend .rec-1{
  font-size: 0
}
.product .recommend .rec-1 .wristband{
