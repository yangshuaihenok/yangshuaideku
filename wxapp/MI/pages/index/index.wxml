<!--index.wxml-->
<view class="container">
  <view class="head">
    <view class="head-search">
      <navigator url="" class="head-search-btn">
        <view class="head-search-text">
          <image class="head-search-photo" src='/images/fangdajing.png' />
          <text class="head-search-word">搜索商品</text>
        </view>
      </navigator>
    </view>
  </view>
  <view class="swiper">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" indicator-color="#8a8a8a" indicator-active-color="#e6e6e6">
      <block wx:for="{{imgUrls}}" wx:key="{{id}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" style='width:100%;height:100%' />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="type">
    <view class="type1">
      <view class="phone">
        <navigator url="">
          <image src="/images/shouji.png" class="phone-pic"></image>
          <text class="phone-text">手机</text>
        </navigator>
      </view>
      <view class="tv">
        <navigator url="">
          <image src="/images/dianshi.png" class="tv-pic"></image>
          <text class="tv-text">电视</text>
        </navigator>
      </view>
      <view class="computer">
        <navigator url="">
          <image src="/images/diannao.png" class="computer-pic"></image>
          <text class="computer-text">电脑</text>
        </navigator>
      </view>
      <view class="smart">
        <navigator url="">
          <image src="/images/zhineng.png" class="smart-pic"></image>
          <text class="smart-text">智能</text>
        </navigator>
      </view>
      <view class="link">
        <navigator url="">
          <image src="/images/shengtailian.png" class="link-pic"></image>
          <text class="link-text">生态链</text>
        </navigator>
      </view>
    </view>
    <view class="type2">
      <view class="new">
        <navigator url="">
          <image src="/images/xinpin.png" class="new-pic"></image>
          <text class="new-text">新品</text>
        </navigator>
      </view>
      <view class="crowdfunding">
        <navigator url="">
          <image src="/images/zhongchou.png" class="crowdfunding-pic"></image>
          <text class="crowdfunding-text">小米众筹</text>
        </navigator>
      </view>
      <view class="trade-in">
        <navigator url="">
          <image src="/images/huanxin.png" class="trade-in-pic"></image>
          <text class="trade-in-text">以旧换新</text>
        </navigator>
      </view>
      <view class="cent">
        <navigator url="">
          <image src="/images/pintuan.png" class="cent-pic"></image>
          <text class="cent-text">一分拼团</text>
        </navigator>
      </view>
      <view class="day">
        <navigator url="">
          <image src="/images/zhenxuan.png" class="day-pic"></image>
          <text class="day-text">每日臻选</text>
        </navigator>
      </view>
    </view>
  </view>
  <view class="product"></view>
</view>